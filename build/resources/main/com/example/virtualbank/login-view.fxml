<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="760.0" spacing="20.0" styleClass="body" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.virtualbank.controllers.loginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="hero-title" text="Welcome">
      <VBox.margin>
         <Insets bottom="-13.0" />
      </VBox.margin></Label>

    <Label styleClass="hero-description" text="enter your credentials">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin></Label>

   <Label styleClass="input-field" text="Username">
      <VBox.margin>
         <Insets bottom="-18.0" left="23.0" right="255.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font></Label>

   <TextField fx:id="inputName" maxWidth="-Infinity" prefHeight="43.0" prefWidth="296.0" promptText="Enter your e-mail" styleClass="input">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </TextField>

   <Label styleClass="input-field" text="Password">
      <VBox.margin>
         <Insets bottom="-18.0" right="236.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font>
   </Label>

   <PasswordField fx:id="inputPassword" maxWidth="-Infinity" prefHeight="43.0" prefWidth="296.0" promptText="Enter your password" styleClass="input">
      <VBox.margin>
         <Insets />
      </VBox.margin></PasswordField>

    <Button contentDisplay="CENTER" onAction="#onLoginButtonClick" prefHeight="41.0" prefWidth="296.0" styleClass="login-btn" text="Login" textAlignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Button>

    <Button contentDisplay="CENTER" onAction="#onBackButtonClick" prefHeight="41.0" prefWidth="153.0" styleClass="logout-btn" text="Back to home" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="-84.0" left="5.0" right="5.0" top="41.0" />
        </VBox.margin></Button>

    <stylesheets>
        <URL value="@styles/styles.css" />
    </stylesheets>

    <Button contentDisplay="CENTER" onAction="#onLogoutButtonClick" prefHeight="41.0" prefWidth="153.0" styleClass="logout-btn" text="Back to home" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="-55.0" left="5.0" right="5.0" top="31.0" />
        </VBox.margin></Button>

</VBox>
