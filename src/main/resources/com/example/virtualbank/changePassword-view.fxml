<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="760.0" spacing="20.0" styleClass="body" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.virtualbank.controllers.changePasswordController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="hero-title" text="Change Password">
        <VBox.margin>
            <Insets bottom="-13.0" />
        </VBox.margin></Label>

    <Label styleClass="hero-description" text="Follow the steps below">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin></Label>

    <Label styleClass="input-field" text="Old password">
        <VBox.margin>
            <Insets bottom="-18.0" right="209.0" />
        </VBox.margin>
        <font>
            <Font size="14.0" />
        </font></Label>

    <TextField fx:id="inputOldPassword" maxWidth="-Infinity" prefHeight="43.0" prefWidth="296.0" promptText="Enter your old password" styleClass="input">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </TextField>

    <Label styleClass="input-field" text="New password">
        <VBox.margin>
            <Insets bottom="-18.0" right="203.0" />
        </VBox.margin>
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <TextField fx:id="inputNewPassword" maxWidth="-Infinity" prefHeight="43.0" prefWidth="296.0" promptText="Enter your new password" styleClass="input">
        <VBox.margin>
            <Insets />
        </VBox.margin></TextField>

    <Button contentDisplay="CENTER" onAction="#onChangePasswordButtonClick" prefHeight="41.0" prefWidth="296.0" styleClass="login-btn" text="Change password" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin></Button>

    <stylesheets>
        <URL value="@styles/styles.css" />
    </stylesheets>

</VBox>
