<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="760.0" spacing="20.0" styleClass="body" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.virtualbank.controllers.registerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label prefHeight="103.0" prefWidth="191.0" styleClass="hero-title" text="Cryptle">
        <VBox.margin>
            <Insets bottom="-13.0" />
        </VBox.margin>
      <padding>
         <Insets bottom="25.0" />
      </padding></Label>

    <Label styleClass="hero-description" text="The future of money">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
      <padding>
         <Insets bottom="29.0" top="-33.0" />
      </padding></Label>

    <Label styleClass="description" text="Choose the type of your new account">
        <VBox.margin>
            <Insets bottom="-12.0" />
        </VBox.margin>
       </Label>

    <Button contentDisplay="CENTER" onAction="#onManagerButtonClick" prefHeight="91.0" prefWidth="153.0" styleClass="login-btn" text="Manager" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="-20.0" right="180.0" top="10.0" />
        </VBox.margin></Button>

    <Button contentDisplay="CENTER" onAction="#onCustomerButtonClick" prefHeight="91.0" prefWidth="153.0" styleClass="login-btn" text="Customer" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="230.0" right="40.0" top="-91.0" />
        </VBox.margin></Button>
   <Label styleClass="description" text="Already have an account?">
      <VBox.margin>
         <Insets bottom="-10.0" top="70.0" />
      </VBox.margin>
   </Label>
   <Button mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="41.0" prefWidth="183.0" styleClass="login-btn" text="Login">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Button>

    <stylesheets>
        <URL value="@styles/registerStyles.css" />
    </stylesheets>

</VBox>
